<Window x:Class="Ваше_пространство_имен.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR Code Generator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="TextInputTextBox" Width="300" Margin="0 0 10 0"/>
            <Button Content="Сгенерировать QR Code" Click="GenerateQRCodeButton_Click"/>
            <Button Content="Сохранить результат" Click="SaveQRCodeButton_Click"/>
        </StackPanel>

        <Image x:Name="QRCodeImage" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
